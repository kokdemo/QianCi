{
    "name": "QianCi",
    "version": "0.0.1",
    "manifest_version": 2,
    "description": "让中文MarkDown写作流畅无比",
    "icons": {
        "48": "icon.png"
    },
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*",
        "notifications",
        "activeTab",
        "storage"

    ],
    "background": {
        "scripts": [ "/js/jquery.js", "/js/background.js" ],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "QianCi"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Alt+Q",
                "mac": "Alt+Q"
            }
        }
    }
}